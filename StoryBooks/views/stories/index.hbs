<h1>Historias Públicas</h1>
<div class="row">
    {{!-- Loop through the stories --}}
    {{#each stories}}
        <div class="col s12 m4">
            <div class="card">
                <div class="card-image">
                    {{!-- Todo: Edit icon --}}
                    {{{editIcon user ../user _id}}}
                </div>
                <div class="card-content center-align">
                    <h5>{{title}}</h5>
                    <p>{{stripTags (truncate body 150)}}</p>
                    <br>
                    <div class="chip">
                        <img src="{{user.image}}" alt="">
                        <a href="/stories/user/{{user._id}}">{{user.displayName}}</a>
                    </div>
                </div>
                <div class="card-action center-align">
                    <a href="/stories/{{_id}}" class="btn grey">Leer Más...</a>
                </div>
            </div>
        </div>
    {{else}}
        <p>No hay ninguna historia pública disponible!</p>
    {{/each}}
</div>