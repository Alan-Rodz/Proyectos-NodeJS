<h1 class="text-center mb-3">{{titulo}}</h1>

{{!-- Para agregar miembros --}}
<form action="/api/miembros" method="POST" class="mb-4">
    <div class="form-group">
        <label for="nombre">Nombre</label>
        <input type="text" name="nombre" class="form-control">
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" name="email" class="form-control">
    </div>
    <br>
    <input type="submit" value="Agregar miembro" class="btn btn-primary btn-block">
</form>


{{!-- Hacemos un loop a trav√©s del array de miembros que recibimos con handlebars --}}
<h4>Miembros</h4>
<ul class="list-group">
    {{#each miembros }}
        <li class="list-group-item">{{this.nombre}}: {{this.email}}</li>
    {{/each}}
</ul>

<a href="/api/miembros/" class="btn btn-light mt-4">Visitar API</a>